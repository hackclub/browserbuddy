{
  "manifest_version": 3,
  "name": "Cherry Tabs",
  "version": "1.0",
  "description": "Save and organize your favorite websites in browser tabs",
  "permissions": ["storage", "tabs"],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
