{
  "manifest_version": 3,
  "name": "Smart Tab Organizer",
  "version": "1.0",
  "description": "Organize tabs into groups with time tracking and productivity modes",
  
  "permissions": [
    "tabs",
    "tabGroups",
    "storage",
    "activeTab"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "Smart Tab Organizer",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon128.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon128.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}