{
  "manifest_version": 3,
  "name": "Ice Drop Effects",
  "version": "1.0",
  "description": "Add ice drop effects to web pages with customizable intervals",
  "permissions": ["storage", "activeTab"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}
