{
    "manifest_version": 3,
    "name": "snippetify",
    "version": "1.2",
    "permissions": ["storage", "activeTab", "contextMenus", "scripting"],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": "icon.png"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ]
  }
  