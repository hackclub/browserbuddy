---
const { icon, icon2, title, description, link, image, width, height } = Astro.props;
---

<a href={link} style=`width:${width ?? 300};height:${height ?? 300}`>
    <div class="card">
        <h2>{icon} {title} <Fragment set:html={icon2} /></h2>
        <Fragment set:html={description}>
            <!-- <p class="card-content" set:html={description} /> -->
        </Fragment>
            {image ? <img src={image} alt={title} /> : ""}
    </div>
</a>

<style>
    a {
        text-decoration: none;
        color: white;
        display: flex;
        justify-content: center;
        align-items: center;
        display: inline-block;
    }

    .card {
        display: flex;
        flex-direction: column;
        align-items: flex-start;
        color: white;
        padding: 2rem;
        width: 300px;
        max-width: 300px;
        height: 100%;
        background-color: var(--hc-red);
        /* position: relative; */
        z-index: 5;
        transition: all 0.2s ease-in-out;
    }

    .card:hover {
        transform: translateY(-10px) translateX(10px) rotate(5deg) scale(1.1);
    }
    .card-content a {
        color: white;
    }

    .card img {
        width: 100%;
        height: auto;
    }

    @media screen and (max-width: 500px) {
        /* .card {
            width: 60%;
            max-width: 60%;
            height: 60%;
        } */

        .card {
            width: 100%;
            height: 100%;
        }
    }
</style>
